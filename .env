# Environment configuration for AI-BPMS Client Application

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8080/ws

# Authentication (Keycloak)
VITE_KEYCLOAK_URL=http://localhost:8180/auth
VITE_KEYCLOAK_REALM=ai-bpms
VITE_KEYCLOAK_CLIENT_ID=ai-bpms-client

# Application Settings
VITE_APP_NAME=AI-BPMS Client
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_MODE=true

# Performance Settings
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000
VITE_API_TIMEOUT=30000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en